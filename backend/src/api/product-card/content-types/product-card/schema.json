{
  "kind": "collectionType",
  "collectionName": "product_cards",
  "info": {
    "singularName": "product-card",
    "pluralName": "product-cards",
    "displayName": "Product Card",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "brand": {
      "type": "string",
      "required": false
    },
    "product": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "string",
      "default": "Christmas"
    },
    "price": {
      "type": "decimal"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "review": {
      "type": "richtext"
    }
  }
}
